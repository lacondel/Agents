<Page x:Class="Agents.Pages.PageAuthorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Agents.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuthorization">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Label Content="Login:"/>
            <TextBox x:Name="tbLogin" Width="250"/>
            <Label Content="Password:"/>
            <PasswordBox x:Name="pbPassword" Width="250"/>
            <Button Content="Войти" x:Name="btnEnter" Click="btnEnter_Click"/>
        </StackPanel>
    </Grid>
</Page>
